{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs", 
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",                           
       "strict": false,
    "strictPropertyInitialization": false,        
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                            
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
